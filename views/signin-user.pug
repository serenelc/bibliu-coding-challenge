extends layout

block content
  script(src='/scripts/script.js')
  
  h1 #{title}
  
  if errorMsg
    h2(style='color: red') #{errorMsg}

  form
    div.form-group(style='display: flex; flex-direction: column;')
      label(for='email') Email:
      input#email.form-control(type='text' name='email' value=(undefined===email ? '' : user.email))
      label(for='password') Password:
      input#password.form-control(type='password' name='password' value=(undefined===password ? '' : user.password))
    button.btn.btn-primary(type='submit' onclick=`createUser()`) Sign In
  
  a(href='/home')
    button.btn.btn-secondary Back

  if errors 
   ul
    for error in errors
     li!= error.msg